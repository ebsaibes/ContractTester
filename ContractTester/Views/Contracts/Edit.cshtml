@model ContractTester.Models.Contract

@{
    ViewData["Title"] = "Edit";
}

<h2>Modify Contract: @Model.Description</h2>

<hr />
<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractString" class="control-label"></label>
                <div class="form-text">ID and Timestamp are required.</div>
                <div class="form-text">Supported data types: Guid, String, Int32, Int64</div>
                <textarea asp-for="ContractString" class="form-control tall"></textarea>
                <span asp-validation-for="ContractString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionNumber" class="control-label"></label>
                <input asp-for="VersionNumber" class="form-control" />
                <span asp-validation-for="VersionNumber" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="UpdateInst" class="control-label"></label>
                <input asp-for="UpdateInst" class="form-control" />
                <span asp-validation-for="UpdateInst" class="text-danger"></span>
            </div>
            <div class="form-group button-list">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i>Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
