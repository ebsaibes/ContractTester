@model ContractTester.Models.Contract

@{
    ViewData["Title"] = "Create";

    var defaultContract = @"{""ID"": ""Guid"", ""Timestamp"": ""String""}";
}

<h2>Create Contract</h2>
<hr />
<div class="row">
    <form asp-action="Create" class="col">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6 col-lg-4">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractString" class="control-label"></label>
                <div class="form-text">ID and Timestamp are required.</div>
                <div class="form-text">Supported data types: Guid, String, Int32, Int64</div>
                <div class="flex-container">
                    <textarea class="flex-expand tall" id="@Html.IdFor(m => m.ContractString)" name="@Html.NameFor(m => m.ContractString)">@defaultContract</textarea>
                </div><span asp-validation-for="ContractString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionNumber" class="control-label"></label>
                <input asp-for="VersionNumber" class="form-control" />
                <span asp-validation-for="VersionNumber" class="text-danger"></span>
            </div>
            <div class="form-group button-list">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i>Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
